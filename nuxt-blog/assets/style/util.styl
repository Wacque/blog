.din
  font-family: din

.fontLight
  font-weight: lighter

.fontBold
  font-weight: bold
  
.fontItalic
  font-style:  italic

.flexCenter
  display: flex
  justify-content: center
  align-items: center

.OnepxLineB
  position relative
  &::after
    position absolute
    display block
    width 100%
    height 0
    bottom 0
    left 0
    right 0
    margin auto
    content ''
    transform: scaleY(0.5)
    border-bottom 1px solid rgb(143,143,143)
